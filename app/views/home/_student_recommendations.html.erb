<!-- code for student recommendations goes here -->
<h4>Recommended Organizations</h4>

<div id="main2">
	<% if @recommended_orgs[0].empty? %>
	  <h5><center><i>There are currently no recommended organizations. Please modify your interests and try again!</i></center></h5>
	<% else %>
		<div class="row">
		  <% @recommended_orgs.each do |org| %>
		    <div class="col s4">
		      <div class="card small">
		        <div class="card-content">
		          <span class="card-title activator grey-text text-darken-4"><%=org[0][1] %><i class="mdi-navigation-more-vert right"></i></span>
		          <br>
		          <p align="justify"><%= org[0][2] %></p>
		        </div>

		        <div class="card-action">
							<%= link_to "View Organization", organization_path(org[0][0]) %>
							<%= image_tag 'favorite.png', size: "30x30", :style => ("padding-left:5px;"), class: "right" %>
							<% unless current_user.favorite_organizations.exists?(id: org[0][0]) %>
								<%= link_to 'Add to favorites', favorite_organizations_path(organization_id: org[0][0]), method: :post %>
							<% else %>
								<%= link_to 'Remove from favorites', favorite_organization_path(org[0][0]), method: :delete %>
							<% end %>
						</div>
		      </div>
		    </div>
		  <% end %>
		</div>
	  
	<% end %>
</div>