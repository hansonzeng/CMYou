<p id="notice"><%= notice %></p>

<h1>Listing Org Tags</h1>

<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @org_tags.each do |org_tag| %>
      <tr>
        <td><%= org_tag.organization_id %></td>
        <td><%= org_tag.tag_id %></td>
        <td><%= link_to 'Show', org_tag %></td>
        <td><%= link_to 'Edit', edit_org_tag_path(org_tag) %></td>
        <td><%= link_to 'Destroy', org_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

