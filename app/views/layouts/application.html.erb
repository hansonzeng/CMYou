    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    <!--<%= favicon_link_tag  %>-->
    <%= csrf_meta_tags %>
</head>
<% if !logged_in? %>
	<body id="signuppage">
<% else %>
	<body>
<% end %>
	<% if logged_in? %>
		<nav class="red lighten-1">
	    <%= render 'partials/nav' %>
	  </nav>
	<% end %>

	<% if logged_in? %>
		<main style="padding-left:320px">
	<% else %>
		<main>
	<% end %>
		<%= yield %>
	</main>

	<footer class="page-footer" style="background:rgb(153,0,0);">
	  <div class="footer-copyright" style="background:rgb(153,0,0);">
	  </div>
	</footer>
</body>
</html>
